FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "laminar_flow/system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application	      simpleFoam;

startFrom         startTime;

startTime         0;

stopAt            endTime;

endTime           0.01;//5e-4

deltaT            5e-7;//5e-12

writeControl      timeStep;

writeInterval     1e4;//500000

purgeWrite        3;//last timeSteps with value are ratined & `0` for all.

writeFormat       binary;//change to `binary` if weird problem occurs

writePrecision    6;//default 6, previously 7

writeCompression  off;

timeFormat        general;

timePrecision     6;

runTimeModifiable true;

// adjustTimeStep  yes;
//
// maxCo           0.2;

functions
  {
